{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run all tests",
      "type": "shell",
      "command": "npx",
      "args": ["jest"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Run tests for current file",
      "type": "shell",
      "command": "npx",
      "args": ["jest", "${relativeFile}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Run tests for current file (watch)",
      "type": "shell",
      "command": "npx",
      "args": ["jest", "${relativeFile}", "--watch"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    }
  ]
}
